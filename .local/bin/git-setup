#!/usr/bin/env python3

# Name:        git-setup
# By:          cyancat
# Tag Added:   22/11/2021
# Desciption:  Sets up git account.

import os

def main():
    username = input("Please enter your git username: ")
    email_address = input("Please enter the email address associated with this account: ")

    os.system("git config --global user.name \"" + username + "\"")
    os.system("git config --global user.email \"" + email_address + "\"")
    os.system("git config --list")

if __name__ == '__main__':
    main()
