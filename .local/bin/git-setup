#!/usr/bin/env python3

# Name:        git-setup.py
# By:          cyancat
# Tag Added:   22/11/2021
# Desciption:  Sets up git account.

import os

username = input("Please enter your git username: ")
emailAddress = input("Please enter the email address associated with this account: ")

os.system("git config --global user.name \"" + username + "\"")
os.system("git config --global user.email \"" + emailAddress + "\"")
os.system("git config --list")
